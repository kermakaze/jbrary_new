<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<GridPane id="welcomePane"
          fx:id="loginPane"
          maxHeight="-Infinity"
          maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="650.0" prefWidth="1000.0" stylesheets="@../../css/login.css"
          xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.jbrary.ui.login.LoginController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <VBox id="loginBox" alignment="CENTER" depthTest="DISABLE" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <children>
            <JFXTextField fx:id="usernameField" promptText="Username">
               <VBox.margin>
                  <Insets bottom="10.0" left="5.0" right="5.0" top="20.0" />
               </VBox.margin></JFXTextField>
            <JFXPasswordField fx:id="passwordField" promptText="Password">
               <VBox.margin>
                  <Insets bottom="10.0" left="5.0" right="5.0" top="20.0" />
               </VBox.margin>
            </JFXPasswordField>
            <JFXButton fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginButtonClicked" onDragDetected="#onLoginButtonClicked" text="Login">
               <VBox.margin>
                  <Insets bottom="20.0" top="10.0" />
               </VBox.margin></JFXButton>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <GridPane.margin>
            <Insets bottom="40.0" left="120.0" right="120.0" />
         </GridPane.margin></VBox>
   </children>
</GridPane>
